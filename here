// ExploreApiPage.js
import React from 'react';
import CardSection from './CardSection';
import data from './yourJsonFile.json'; // Import your JSON data

const ExploreApiPage = () => {
  // Set up initial selectedNode based on your requirements
  const initialSelectedNode = data[0].children[0]; // Change this based on your data structure

  return (
    <div className="explore-api-page">
      <h2>Explore API Page</h2>
      <CardSection selectedNode={initialSelectedNode} />
    </div>
  );
};

export default ExploreApiPage;


// CardSection.js
import React from 'react';
import { Link } from 'react-router-dom';

const CardSection = ({ selectedNode }) => {
  return (
    <div>
      {selectedNode.children.map((child) => (
        <div key={child.id}>
          <h3>{child.name}</h3>
          <p>{child.Description}</p>
          {child.href && (
            <Link to={child.href}>
              <button>Go to {child.name}</button>
            </Link>
          )}
        </div>
      ))}
    </div>
  );
};

export default CardSection;

// TreePage.js
import React, { useState } from 'react';
import { Treebeard } from 'react-treebeard';
import CardSection from './CardSection';
import data from './yourJsonFile.json'; // Import your JSON data

const TreePage = () => {
  const [selectedNode, setSelectedNode] = useState(null);

  const onToggle = (node, toggled) => {
    if (selectedNode) {
      selectedNode.active = false;
    }
    node.active = true;
    setSelectedNode(node);
  };

  return (
    <div className="page-container">
      <div className="tree-container">
        <Treebeard data={data} onToggle={onToggle} />
      </div>
      <div className="card-container">
        {selectedNode && selectedNode.children && (
          <CardSection selectedNode={selectedNode} />
        )}
      </div>
    </div>
  );
};

export default TreePage;


