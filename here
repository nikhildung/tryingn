import * as React from 'react';
import Box from '@mui/material/Box';
import ExpandMoreIcon from '@mui/icons-material/ExpandMore';
import ChevronRightIcon from '@mui/icons-material/ChevronRight';
import { TreeView } from '@mui/x-tree-view/TreeView';
import { TreeItem } from '@mui/x-tree-view/TreeItem';
import json from './ExploreAPIPage.json';

const data = json;

export default function RichObjectTreeView() {
  const renderTree = (nodes) => (
    <TreeItem
      key={nodes.id}
      nodeId={nodes.id.toString()} // Convert id to string to avoid key warning
      label={nodes.name}
    >
      {Array.isArray(nodes.data.children)
        ? nodes.data.children.map((node) => renderTree(node))
        : null}
    </TreeItem>
  );

  return (
    <Box sx={{ minHeight: 110, flexGrow: 1, maxWidth: 300 }}>
      <TreeView
        aria-label="rich object"
        defaultCollapseIcon={<ExpandMoreIcon />}
        defaultExpanded={['1']} // Set the default expanded node(s) based on your data
        defaultExpandIcon={<ChevronRightIcon />}
      >
        {renderTree({ data })}
      </TreeView>
    </Box>
  );
}
