<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JSON Tree with jsTree</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.11/themes/default/style.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.11/jstree.min.js"></script>
  <style>
    /* Add your custom styles here */
  </style>
</head>
<body>

<div id="jsonTree"></div>

<script>
  // Your JSON data
  const jsonData = {
    "root": {
      "item1": null,
      "item2": {
        "subItem1": null,
        "subItem2": null
      },
      "item3": null
    }
  };

  // Initialize jsTree with checkmarks
  $('#jsonTree').jstree({
    'core': {
      'data': [jsonData]
    },
    'plugins': ['checkbox'],
    'checkbox': {
      'tie_selection': false
    }
  }).on('check_node.jstree uncheck_node.jstree', function (e, data) {
    const node = data.node;
    const isOpen = node.state && node.state.opened;

    // If the node is checked and has children, open its children
    if (data.action === 'check_node' && node.children.length > 0 && !isOpen) {
      $('#jsonTree').jstree('open_node', node);
    }

    // If the node is unchecked and has children, close its children
    if (data.action === 'uncheck_node' && node.children.length > 0 && isOpen) {
      $('#jsonTree').jstree('close_node', node);
    }
  });
</script>

</body>
</html>
