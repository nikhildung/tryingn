import React from 'react';

const data = [ /* Your provided JSON data here */ ];

const PaymentChildren = () => {
  // Find the "Payments" category
  const paymentsCategory = data.find(category => category.name === 'Payments');

  // Get the children of the "Payments" category
  const paymentChildren = paymentsCategory ? paymentsCategory.children : [];

  return (
    <div>
      <h2>Payments Children:</h2>
      <ul>
        {paymentChildren.map(child => (
          <li key={child.id}>
            {child.name} - <a href={child.href}>{child.href}</a>
          </li>
        ))}
      </ul>
    </div>
  );
};

export default PaymentChildren;
