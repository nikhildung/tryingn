// ApiPageTemplate.js
import React, { useState, useEffect } from 'react';
import './ApiPageTemplate.css'; // Import the CSS file

const ApiPageTemplate = ({ pageTitle, imageSrc, contentJson }) => {
  const [content, setContent] = useState('');

  const handleButtonClick = (contentType) => {
    // Simulate fetching content from JSON file based on the button clicked
    // Replace this with your actual logic to fetch content
    const jsonContent = contentJson[contentType];
    setContent(jsonContent);
  };

  useEffect(() => {
    // Simulate clicking the "Overview" button by default
    handleButtonClick('overview');
  }, []); // The empty dependency array ensures this effect runs only once on mount

  return (
    <>
      {/* First Row - Breadcrumbs */}
      <div className="breadcrumbs">
        Breadcrumbs: Home / {pageTitle}
      </div>

      {/* Second Row - Sidebar */}
      <div className="sidebar">
        <div>
          <img src={imageSrc} alt="Sample Image" style={{ width: '100%' }} />
        </div>
        <div className="sidebar-content">
          <h1>{pageTitle}</h1>
          <button onClick={() => handleButtonClick('overview')}>Overview</button>
          <button onClick={() => handleButtonClick('documentation')}>Documentation</button>
          <button onClick={() => handleButtonClick('tutorials')}>Tutorials</button>
        </div>
      </div>

      {/* Third Row - Content */}
      <div className="content">
        <div>
          <p>{content}</p>
        </div>
        <div className="image-container">
          <img src={imageSrc} alt="Sample Image" style={{ maxWidth: '100%', maxHeight: '100%' }} />
        </div>
      </div>
    </>
  );
};

export default ApiPageTemplate;
