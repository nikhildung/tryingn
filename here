// YourMainComponent.js
import React, { useState, useEffect } from 'react';
import Breadcrumbs from './Breadcrumbs';

const YourMainComponent = () => {
  const [breadcrumbs, setBreadcrumbs] = useState([]);

  useEffect(() => {
    // Logic to dynamically set breadcrumbs based on user navigation
    // Example: If on the home page, set breadcrumbs to only the home link
    setBreadcrumbs([
      { id: 1, name: 'Home', url: '/' }
    ]);
    // Add more logic as needed for other pages
  }, []); // Dependency array ensures this effect runs only once on mount

  const handleCategoryClick = () => {
    // Logic to update breadcrumbs when a category is clicked
    setBreadcrumbs([
      { id: 1, name: 'Home', url: '/' },
      { id: 2, name: 'Category 1', url: '/category1' }
    ]);
  };

  // Example function for handling home click
  const handleHomeClick = () => {
    setBreadcrumbs([
      { id: 1, name: 'Home', url: '/' }
    ]);
  };

  return (
    <div>
      <Breadcrumbs breadcrumbs={breadcrumbs} />
      <button onClick={handleCategoryClick}>Go to Category 1</button>
      <button onClick={handleHomeClick}>Go to Home</button>
      {/* Your other page content */}
    </div>
  );
};

export default YourMainComponent;


// Breadcrumbs.js
import React from 'react';

const Breadcrumbs = ({ breadcrumbs }) => {
  return (
    <div>
      {breadcrumbs.map((crumb, index) => (
        <span key={crumb.id}>
          <a href={crumb.url}>{crumb.name}</a>
          {index < breadcrumbs.length - 1 && <span> / </span>}
        </span>
      ))}
    </div>
  );
};

export default Breadcrumbs;






