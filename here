// Navbar.js
import React from "react";
import "./Navbar.css";
import Navbarlinks from "./Navbarlinks";
import Dropdown from "./Dropdown";

const Navbar = () => {
  const exploreApiOptions = [
    { title: "Explore API", link: "/explore-api" },
    // Add more options if needed
  ];

  return (
    <nav className="align_centre navbar">
      <div className="align_centre">
        <a href="/">
          <img
            src="https://www.kotak.com/content/dam/Kotak/kotak-logo.png"
            className="navbar_heading"
            alt="Kotak Logo"
          ></img>
        </a>
      </div>

      <div className="align_centre navbar_links">
        <Navbarlinks link="/" title="Home" />
        <Navbarlinks link="/api" title="API" dropdownOptions={exploreApiOptions} />
        <Navbarlinks link="/support" title="Support" />
        <Navbarlinks link="/login" title="Sign-in" />
        <Navbarlinks link="/signup" title="Sign-up" />
      </div>
    </nav>
  );
};

export default Navbar;


// Navbarlinks.js
import React, { useState } from "react";
import { Link } from "react-router-dom";
import Dropdown from "./Dropdown";
import "./Navbarlinks.css";

const Navbarlinks = ({ link, title, dropdownOptions }) => {
  const [isDropdownOpen, setIsDropdownOpen] = useState(false);

  const handleDropdownOpen = () => {
    setIsDropdownOpen(true);
  };

  const handleDropdownClose = () => {
    setIsDropdownOpen(false);
  };

  return (
    <div className="navbar-link" onMouseEnter={handleDropdownOpen} onMouseLeave={handleDropdownClose}>
      {link ? (
        <Link to={link}>{title}</Link>
      ) : (
        <span className="link_emoji">{title}</span>
      )}

      {dropdownOptions && isDropdownOpen && <Dropdown options={dropdownOptions} />}
    </div>
  );
};

export default Navbarlinks;
