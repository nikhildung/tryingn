<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tree Structure Example</title>
  <style>
    /* Style for tree nodes */
    .tree-node {
      margin-left: 20px;
    }
  </style>
</head>
<body>

  <!-- Tree container -->
  <div id="tree-container"></div>

  <script>
    // Your JSON data (replace this with your actual JSON file data)
    const jsonData = [
      {
        label: 'Node 1',
        children: [
          {
            label: 'Node 1.1',
            children: [
              { label: 'Node 1.1.1' },
              { label: 'Node 1.1.2' }
            ]
          },
          { label: 'Node 1.2' }
        ]
      },
      { label: 'Node 2' }
    ];

    // Function to create a tree node
    function createTreeNode(node, parentElement) {
      const treeNode = document.createElement('div');
      treeNode.className = 'tree-node';
      treeNode.innerHTML = node.label;

      // Recursive call for children
      if (node.children && node.children.length > 0) {
        const childrenContainer = document.createElement('div');
        node.children.forEach(child => createTreeNode(child, childrenContainer));
        treeNode.appendChild(childrenContainer);
      }

      parentElement.appendChild(treeNode);
    }

    // Initialize the tree
    document.addEventListener('DOMContentLoaded', function () {
      const treeContainer = document.querySelector('#tree-container');
      jsonData.forEach(node => createTreeNode(node, treeContainer));
    });
  </script>

</body>
</html>
