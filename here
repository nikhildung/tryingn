import React from 'react';

const TreeNode = ({ node }) => (
  <div>
    <div>{node.name}</div>
    {node.children && node.children.length > 0 && (
      <div style={{ marginLeft: '20px' }}>
        {node.children.map((child) => (
          <TreeNode key={child.id} node={child} />
        ))}
      </div>
    )}
  </div>
);

const TreeView = ({ data }) => (
  <div>
    {data.map((node) => (
      <TreeNode key={node.id} node={node} />
    ))}
  </div>
);

export default TreeView;
