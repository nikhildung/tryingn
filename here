import React, { useState } from 'react';
import { Treebeard } from 'react-treebeard';
import { Link } from 'react-router-dom'; // Import Link if using React Router
import './TreeView.css';

const data = [
  // ... (unchanged)

  // Set active property for each parent node to true by default
  { id: 1, name: "Payments", active: true, children: [...]},
  { id: 2, name: "Account Services", active: true, children: [...]},
  // ... (other nodes)
];

const TreeView = () => {
  const [activeNode, setActiveNode] = useState(null);

  const onToggle = (node, toggled) => {
    if (activeNode) {
      activeNode.active = false;
    }
    node.active = true;
    if (node.children) {
      node.toggled = toggled;
    }
    setActiveNode(node);
  };

  const decorators = {
    ...Treebeard.decorators,
    // Hide arrow for all children nodes
    Loading: (props) => <div>{props.node.name}</div>,
    Toggle: () => null,
  };

  return (
    <div className="container">
      <div className="tree-container">
        <Treebeard
          data={data}
          onToggle={onToggle}
          decorators={decorators}
        />
      </div>
      <div className="cards-container">
        {activeNode &&
          activeNode.children &&
          activeNode.children.map((child) => (
            <Link to={child.href} key={child.name} className="card">
              {child.name}
            </Link>
          ))}
      </div>
    </div>
  );
};

export default TreeView;
