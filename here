// Inside TreeNode component in Sidebarsection
<span onClick={() => onNodeClick(node)}><a href={node.href}>{node.name}</a></span>

import React, { useState } from 'react';
import Sidebarsection from '../API/SidebarSection.jsx';
import CardSection from './CardSection.jsx';
import jsonData from '../API/Sidebar.json';

const APIPage = () => {
  const [selectedNode, setSelectedNode] = useState(null);

  const handleNodeClick = (node) => {
    setSelectedNode(node);
  };

  return (
    <div>
      <section className='API_page'>
        <div className='gridlayout'>
          <Sidebarsection onNodeClick={handleNodeClick} />
          <section className='align_centre featured_products_list'>
            <CardSection selectedNode={selectedNode} />
          </section>
        </div>
      </section>
    </div>
  );
};

export default APIPage;
